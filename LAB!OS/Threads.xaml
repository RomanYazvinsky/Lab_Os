<Window x:Class="LAB_OS.Threads"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LAB_OS"
        mc:Ignorable="d"
        Title="Threads" Height="300" Width="420.446">
    <Grid Margin="0,0,2,0" >
        <ListView x:Name="ThreadList" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Margin="10,10,0,0" VerticalAlignment="Top" VerticalContentAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=Id}">ID</GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=CurrentPriority}" Width="70">Приоритет</GridViewColumn>
<!--                    <GridViewColumn DisplayMemberBinding="{Binding Path=Memory}">Память</GridViewColumn>-->
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>

